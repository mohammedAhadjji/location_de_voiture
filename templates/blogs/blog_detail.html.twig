{% extends 'base.html.twig' %}

    {% block title %}blogs_details
    {% endblock %}
    
    {% block body %}
        <!-- End Navbar Area -->

		
<div class="page-banner" style="background-image: url('{{ asset('uploads/attachments/panel.jpg')}}')">
<div class="page-banner-bg"></div>
<h1> {{blog.title}} </h1>
<nav>
    <ol class="breadcrumb justify-content-center">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/liste/blogs">Blogs</a></li>
        <li class="breadcrumb-item active"> {{blog.title}} </li>
    </ol>
</nav>
</div>

<div class="page-content">
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="blog-item-single">
                <div class="featured-photo">
                    <img src="{{asset('/uploads/attachments/' ~blog.images[0].name)}}">
                </div>
                <div class="text">
                    <p> {{blog.content|raw}} </p>
                </div>


                                    <div class="comment mt_40">

                    <h2 class="mb_25">0 Comments</h2>

                                                <div class="text-danger">No Comment Found</div>
                    

                    <h2 class="mt_50 mb_20">Post Comment</h2>
                    <form action="https://demo.phpscriptpoint.com/carpoint/post/comment" method="post">
                        <input type="hidden" name="_token" value="voFt0I2FTLCVsDNXX06py6UfEWUQXxJo7xumLPWX">							<input type="hidden" name="blog_id" value="3">
                        <input type="hidden" name="post_slug" value="libris-impetus-molestiae-te-eu-ius-ludus">
                        <input type="hidden" name="comment_status" value="Pending">
                        <div class="row mb_20">
                            <div class="col">
                                <label for="">Name</label>
                                <input type="text" class="form-control" name="person_name">
                            </div>
                            <div class="col">
                                <label for="">Email</label>
                                <input type="email" class="form-control" name="person_email">
                            </div>
                        </div>
                        <div class="row mb_20">
                            <div class="col">
                                <label for="">Comment</label>
                                <textarea name="person_comment" class="form-control h-200" cols="30" rows="10"></textarea>
                            </div>
                        </div>
                                                    <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
                
            </div>
        </div>

        <div class="col-md-4">
            <div class="sidebar">
                <div class="widget">
                    <h3>Categories</h3>
                    <div class="type-1">
                        <ul>
                            {% for category in categories %}
                                 <li><a href="{{ path("blogs_with_categorie", {id: category.id})}}"> {{category.title}} </a></li>
                                                           
                            {% endfor %}
                                                            </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>


    {% endblock %}