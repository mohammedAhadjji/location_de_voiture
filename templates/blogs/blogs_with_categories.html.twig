            {% if blogs is not empty %}
            {% for blog in blogs %}
                <div class="col-md-4">
				<div class="blog-item">
					<div class="featured-photo">
						<a href="{{ path("blogs_detail", {id: blog.id})}}"><img src="{{asset('/uploads/attachments/' ~blog.images[0].name)}}"></a>
					</div>
					<div class="text">
						<h2>
							<a href="{{ path("blogs_detail", {id: blog.id})}}"> {{blog.title}} </a>
						</h2>
						<div class="short-description">
							<p>
								<p>  {% set text = blog.content|striptags|slice(0,60)|trim %}
									{{ text|replace({'<img': '', '/>': ''})|raw }}
									{% if text|length > 60 %}...{% endif %}...</p>
							</p>
						</div>
					</div>
				</div>
			</div>
            {% endfor %}
        {% else %}
            <div class="col-md-4">
            <p>Aucun r√©sultat n'existe.</p>
            </div><br>   <br>  <br>
        {% endif %}
						
