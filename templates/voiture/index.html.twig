{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <div class="container" style="min-height: 600px;margin:5% 20%">
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
               
                <th>Modele</th>
                <th>Annee</th>
                <th>Type</th>
                <th>Desponibilite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.annee ? voiture.annee|date('Y-m-d') : '' }}</td>
                <td>{{ voiture.type }}</td>
                <td>{{ voiture.desponibilite ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn red" href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
                    <a class="btn red" href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn red" href="{{ path('app_voiture_new') }}">Create new</a>
    </div>
{% endblock %}
